@model Car

<form method="post">
    <h4>Редактирование товара</h4>
    <br />
    <div class="row">
        <label for="name" class="col-sm-2 col-form-label">название товара:</label>
        <div class="col-sm-8">
            <input name="Name" type="text" class="form-control" id="name" value="@Model.Name">
        </div>
    </div>
    <br />
    <div class="row">
        <label for="cost" class="col-sm-2 col-form-label">цена товара, руб.:</label>
        <div class="col-sm-8">
            <input name="Cost" type="text" class="form-control" id="cost" value="@Model.Cost">
        </div>
    </div>
    <br />
    <div class="row">
        <label for="imagePath" class="col-sm-2 col-form-label">изображение товара:</label>
        <div class="col-sm-8">
            <input name="ImagePath" type="text" class="form-control" id="imagePath" value="@Model.Link">
        </div>
    </div>
    <br />
    <div class="row">
        <label for="description" class="col-sm-2 col-form-label">описание товара:</label>
        <div class="col-sm-8">
            <input name="Description" type="text" class="form-control" id="description" value="@Model.Description">
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-3">
            <label for="MaxSpeed" class="col" style="vertical-align: middle">Максимальная скорость</label>
            <div class="col">
                <input name="MaxSpeed" type="text" class="form-control" id="description" value="@Model.maxSpeed">
            </div>
        </div>
        <div class="col-3">
            <label for="Weight" style="vertical-align: middle; text-align: center">Масса авто</label>
            <div class="col">
                <input name="Weight" type="text" class="form-control" id="description" value="@Model.weight">
            </div>
        </div>
        <div class="col-3">
            <label for="hp" class="col" style="vertical-align: middle">Количество лошадиных сил</label>
            <div class="col">
                <input name="hp" type="text" class="form-control" id="description" value="@Model.hp">
            </div>
        </div>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-primary" asp-controller="Admin" asp-action="Edit" asp-route-carid="@Model.Id">Сохранить</button>
    <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="Cars">Отмена</a>
</form>