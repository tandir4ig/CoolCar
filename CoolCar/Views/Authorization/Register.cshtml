@model Register

<form method="post">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <h4>Регистрация</h4>
    <br />
    <div class="row mb-3">
        <label asp-for="Login" class="col-sm-1 col-form-label">Логин</label>
        <div class="col-sm-3">
            <input asp-for="Login" type="" class="form-control" id="login" placeholder="Email">
            <span asp-validation-for="Login"/>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Password" class="col-sm-1 col-form-label">Пароль</label>
        <div class="col-sm-3">
            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="*********">
            <span asp-validation-for="Password"/>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="PasswordComfirm" class="col-sm-1 col-form-label">Повторите пароль</label>
        <div class="col-sm-3">
            <input asp-for="PasswordComfirm" type="password" class="form-control" id="password" placeholder="*********">
            <span asp-validation-for="PasswordComfirm"/>
        </div>
    </div>
    <button type="submit" class="btn btn-outline-primary" asp-controller="authorization" asp-action="AddNewUser">Зарегистрироваться</button>
</form>