@model Register

<form method="post">
    <input asp-for="ReturnUrl" type="hidden" />
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <h4>Регистрация</h4>
    <br />
    <div class="row mb-3">
        <label asp-for="UserName" class="col-sm-1 col-form-label">Логин</label>
        <div class="col-sm-3">
            <input asp-for="UserName" type="" class="form-control" id="login" placeholder="Email">
            <span asp-validation-for="UserName"/>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="FirstName" class="col-sm-1 col-form-label">Имя</label>
        <div class="col-sm-3">
            <input asp-for="FirstName" type="" class="form-control" id="login" placeholder="Иван">
            <span asp-validation-for="FirstName" />
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="LastName" class="col-sm-1 col-form-label">Фамилия</label>
        <div class="col-sm-3">
            <input asp-for="LastName" type="" class="form-control" id="login" placeholder="Иванов">
            <span asp-validation-for="LastName" />
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Phone" class="col-sm-1 col-form-label">Телефон</label>
        <div class="col-sm-3">
            <input asp-for="Phone" type="" class="form-control" id="login" placeholder="+7(900)777-77-77">
            <span asp-validation-for="Phone" />
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Password" class="col-sm-1 col-form-label">Пароль</label>
        <div class="col-sm-3">
            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="*********">
            <span asp-validation-for="Password"/>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="ConfirmPassword" class="col-sm-1 col-form-label">Повторите пароль</label>
        <div class="col-sm-3">
            <input asp-for="ConfirmPassword" type="password" class="form-control" id="password" placeholder="*********">
            <span asp-validation-for="ConfirmPassword"/>
        </div>
    </div>
    <button type="submit" class="btn btn-outline-primary" asp-controller="Account" asp-action="Register">Зарегистрироваться</button>
</form>