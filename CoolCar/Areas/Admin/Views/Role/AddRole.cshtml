@await Html.PartialAsync("AdminMenu")
@model RoleViewModel
<form method="post">
    <h2 class="text-center">Добавление роли</h2>
    <br />
    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
    <div class="row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label">название роли:</label><br />
        <div class="col-sm-8">
            <input asp-for="RoleName" type="text" class="form-control" />
            <span asp-validation-for="RoleName" />
        </div>
    </div>
    <br />
    <br />
    <div class="text-center">
        <button type="submit" class="btn btn-primary" asp-area="admin" asp-controller="Role" asp-action="AddRole">Сохранить</button>
        <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="Roles">Отмена</a>
    </div>
</form>