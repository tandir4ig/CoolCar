@using CoolCar.Areas.Admin.Models

@model AddCarViewModel

<form method="post" enctype="multipart/form-data">
    <h4>Добавление товара</h4>

    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div> <br />

    <div class="row">
        <label asp-for="Name" class="col-sm-2 col-form-label">название товара:</label>
        <div class="col-sm-8">
            <input asp-for="Name" type="text" class="form-control" id="name">
            <span asp-validation-for="Name"/>
        </div>
    </div>
    <br />
    <div class="row">
        <label asp-for="Cost" class="col-sm-2 col-form-label">цена товара, руб.:</label>
        <div class="col-sm-8">
            <input asp-for="Cost" type="text" class="form-control" id="cost">
            <span asp-validation-for="Cost"/>
        </div>
    </div>
    <br />
    <div class="row">
        <label asp-for="Description" class="col-sm-2 col-form-label">описание товара:</label>
        <div class="col-sm-8">
            <input asp-for="Description" type="text" class="form-control" id="description">
            <span asp-validation-for="Description"/>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-3">
            <label asp-for="maxSpeed" class="col" style="vertical-align: middle">Максимальная скорость</label>
            <div class="col">
                <input asp-for="maxSpeed" type="text" class="form-control" id="description">
                <span asp-validation-for="maxSpeed"/>
            </div>
        </div>
        <div class="col-3">
            <label asp-for="weight" style="vertical-align: middle; text-align: center">Масса авто</label>
            <div class="col">
                <input asp-for="weight" type="text" class="form-control" id="description">
                <span asp-validation-for="weight"/>
            </div>
        </div>
        <div class="col-3">
            <label asp-for="hp" class="col" style="vertical-align: middle">Количество лошадиных сил</label>
            <div class="col">
                <input asp-for="hp" type="text" class="form-control" id="description">
                <span asp-validation-for="hp"/>
            </div>
        </div>
        <div class="col-3">
            <label asp-for="UploadedFiles" class="col" style="vertical-align: middle">Загрузить изображения</label>
            <div class="col">
                <input asp-for="UploadedFiles" type="file" multiple class="form-control" id="description">
            </div>
        </div>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-primary" asp-controller="Admin" asp-action="Add">Сохранить</button>
    <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="Cars">Отмена</a>
</form>