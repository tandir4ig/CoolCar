@await Html.PartialAsync("AdminMenu")
@model List<Role>

<form method="post">
<div class="text-center">
    <h3>Роли</h3>
</div>
    <div class="row">
        <div class="col">
            @if (Model.Count() == 0)
            {
                <div class="text-center">
                    <h3> Список ролей пуст</h3>
                </div>
            }
            else
            {

                <table class="table">
                    <thead>
                        <tr>
                            <th>Имя роли</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <th>@role.RoleName</th>
                                <th class="text-end">
                                    <button class="btn btn-outline-warning" asp-controller="admin" asp-action="DeleteRole" name="role" value="@role.RoleName"><i class="bi bi-trash-fill"> Удалить роль </i></button>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
                <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="AddRole">Добавить роль</a>
            }
        </div>
    </div>
</form>