@model Order
@* @await Html.PartialAsync("AdminMenu") *@
<form method="post">
    <div class="row">
        <div class="col">
            <h4>Заказ № Model.Id</h4>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Дата заказа:</th>
                        <td>@Model.Date</td>
                    </tr>
                    <tr>
                        <th>Время заказа:</th>
                        <td>@Model.Time</td>
                    </tr>
                    <tr>
                        <th>Адрес:</th>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <th>Получатель:</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th>Телефон:</th>
                        <td>@Model.PhoneNumber</td>
                    </tr>
                    <tr>
                        <th>Email:</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Сумма заказа</th>
                        <td>@Model.TotalCost</td>
                    </tr>
                    <tr>
                        <th>Статус заказа</th>
                        <td>
                            @switch (Model.Status)
                            {
                                case OrderStatus.Created:
                                    <p>создан</p>
                                    ;
                                    break;
                                case OrderStatus.Delivering:
                                    <p>В пути</p>
                                    ;
                                    break;
                                case OrderStatus.Delivered:
                                    <p>Доставлен</p>
                                    ;
                                    break;
                                case OrderStatus.Canceled:
                                    <p>Отменен</p>
                                    ;
                                    break;
                                case OrderStatus.Processed:
                                    <p>Обработан</p>
                                    ;
                                    break;
                            }
                            <select class="form-select-sm" name="Status">
                                <option selected>Изменить статус</option>
                                <option value="@OrderStatus.Created">Создан</option>
                                <option value="@OrderStatus.Processed">Обработан</option>
                                <option value="@OrderStatus.Delivering">В пути</option>
                                <option value="@OrderStatus.Delivered">Доставлен</option>
                                <option value="@OrderStatus.Canceled">Отменен</option>
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
            <button type="submit" class="btn btn-primary" asp-controller="Admin" asp-action="EditStatus" asp-route-id="@Model.Id">Сохранить</button>
            <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="Orders">Отмена</a>
        </div>
    </div>
</form>
