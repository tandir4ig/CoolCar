@model ChangePassword
@* <h2>Смена пароля для пользователя @ViewData["userName"]</h2> *@


<form method="post">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    
    
    <div class="row mb-3">
        <label asp-for="NewPassword" class="col-sm-1 col-form-label">Фамилия</label>
        <div class="col-sm-3">
            <input asp-for="NewPassword" type="" class="form-control" id="login" placeholder="Иванов">
            <span asp-validation-for="NewPassword" />
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="ConfirmPassword" class="col-sm-1 col-form-label">Фамилия</label>
        <div class="col-sm-3">
            <input asp-for="ConfirmPassword" type="" class="form-control" id="login" placeholder="Иванов">
            <span asp-validation-for="ConfirmPassword" />
        </div>
    </div>
    <button type="submit" class="btn btn-outline-primary" asp-area="Admin" asp-controller="User" asp-action="AddUser">Зарегистрироваться</button>
</form>
